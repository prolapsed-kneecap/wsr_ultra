<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_1">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardViewBlock"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        app:cardCornerRadius="15dp">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:textColor="@color/background_1"
            android:textSize="22dp"
            android:text="Заголовок блока"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textView12"
            android:text="Краткое описание блока \n с двумя строчками"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/background_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonMore"
            android:text="Подробнее"
            android:layout_width="125dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/background_1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/imageViewBlock"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/blockimage1"
            android:layout_gravity="end"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>